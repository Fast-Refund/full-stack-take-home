{
  "compilerOptions": {
    "types": ["node", "jest"],
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "removeComments": true,
    "listEmittedFiles": false,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
